# Aliases intended for work use

alias metazo="docker compose exec -u www-data php php"
alias dcgo="dcup && dcbash"
alias dcr='docker compose restart'
alias dcbash='docker compose exec -u www-data php bash'

alias ltr='find . -type f -name "*.log" ! -path "./var/cache/*" -exec truncate -s 0 "$file" {} +'
alias lta='find . -type f -name "*.log" ! -path "./var/cache/*" -exec tail -f "$file" {} +'
alias lt='ltr && lta'

alias runtest='metazo bin/phpunit.phar -c phpunit.xml --colors=always'

